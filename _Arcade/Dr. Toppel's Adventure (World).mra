    <setname>drtoppel</setname>
    <rbf>jtkiwi</rbf>
    <mameversion>0251</mameversion>
    <year>1987</year>
    <manufacturer>Kaneko / Taito Corporation Japan</manufacturer>
    <players>2</players>
    <joystick>8</joystick>
    <rotation>vertical (cw)</rotation>
    <region>World</region>
